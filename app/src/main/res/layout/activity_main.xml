<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tyler.teamselector.MainActivity">

    <EditText
        android:id="@+id/team_1_box"
        android:layout_width="267dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/team_1_name"
        android:layout_alignLeft="@+id/select_button"
        android:layout_alignStart="@+id/select_button"
        tools:layout_editor_absoluteX="87dp"
        tools:layout_editor_absoluteY="19dp" />

    <EditText
        android:id="@+id/team_2_box"
        android:layout_width="266dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/team_1_box"
        android:layout_alignStart="@+id/team_1_box"
        android:layout_below="@+id/team_1_box"
        android:layout_marginTop="38dp"
        tools:layout_editor_absoluteX="87dp"
        tools:layout_editor_absoluteY="99dp" />

    <TextView
        android:id="@+id/team_1_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/team_2_name"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/team_2_name"
        android:layout_marginTop="36dp"
        android:text="@string/team_1"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="46dp" />

    <TextView
        android:id="@+id/team_2_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/team_2_box"
        android:layout_marginEnd="26dp"
        android:layout_marginRight="26dp"
        android:layout_toLeftOf="@+id/team_2_box"
        android:layout_toStartOf="@+id/team_2_box"
        android:text="@string/team_2"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="126dp" />

    <Button
        android:id="@+id/select_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/select_button_text" />

    <TextView
        android:id="@+id/result_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/select_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="71dp"
        android:text="@string/result_text" />

</RelativeLayout>
